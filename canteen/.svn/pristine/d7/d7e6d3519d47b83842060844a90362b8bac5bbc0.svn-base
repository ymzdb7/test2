<!DOCTYPE html>
<html>
<head>
<title>订单管理</title>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link rel="stylesheet" href="../../css/bootstrap.min.css">
<link rel="stylesheet" href="../../css/font-awesome.min.css">
<link rel="stylesheet" href="../../plugins/jqgrid/ui.jqgrid-bootstrap.css">
<link rel="stylesheet" href="../../plugins/ztree/css/metroStyle/metroStyle.css">
<link rel="stylesheet" href="../../css/main.css">
<link rel="stylesheet" href="../../ueditor/themes/default/css/ueditor.css">
<script src="../../libs/jquery.min.js"></script>
<script src="../../plugins/layer/layer.js"></script>
<script src="../../libs/bootstrap.min.js"></script>
<script src="../../libs/vue.min.js"></script>
<script src="../../plugins/jqgrid/grid.locale-cn.js"></script>
<script src="../../plugins/jqgrid/jquery.jqGrid.min.js"></script>
<script src="../../plugins/ztree/jquery.ztree.all.min.js"></script>
<script src="../../js/common.js"></script>
<!-- <script type="text/javascript" charset="gbk">
      window.UEDITOR_HOME_URL = "../../ueditor/";//编辑器项目路径
</script>
<script type="text/javascript" src="../../ueditor/ueditor.config.js"></script>
<script type="text/javascript" src="../../ueditor/ueditor.all.js"></script> -->
</head>
<body>

<div id="rrapp" v-cloak>
	<div v-show="showList">
		<div class="grid-btn">
		<div class="form-group col-sm-2">
			 	<div class="col-sm-10">
				<select class="form-control"  v-model="q.orderState" @keyup.enter="query"  >
	     				<option  value="" selected="selected">全部</option>
	     			<option :value="option"  v-for="option in  orderState">
           			 {{ option}}
       				 </option>		 		
				</select>
				  </div>
			</div>
			<a class="btn btn-default" @click="query">查询</a>
			<a class="btn btn-primary"  @click="adDishesAdd"><i></i>&nbsp;商品统计</a>
			<a class="btn btn-primary"  @click="hisOrder" ><i></i>&nbsp;历史订单</a>
		</div>
	    <table id="jqGrid"></table>
	    <div id="jqGridPager"></div>
    </div>
   
   
      <div v-show="showListNo" class="panel panel-default">
   <form class="form-horizontal">
 <div style="margin-left: 30px"><h3>商品详情：</h3></div>  
   <table   style="margin-left: 70px ">
	<tr>
	<th width="300">菜品名称</th>
	<th width="300">菜品价格</th>
	<th width="300">下单数量</th>
	<th width="300">库存数量</th>
	</tr>

  		 <template v-for="item in adDishes"  v-if="adDishes !=null" > 
  			
  					<tr>
					<td style="padding-left:10px">{{item.advanceDishes}}</td> 
					<td style="padding-left:15px">{{item.advDishesPrice}}元</td>
					<td style="padding-left:25px">{{item.count}}</td> 
					<td style="padding-left:25px">{{item.counts}}</td>
					 </tr>
					 
		 </template>
 
 </table>
   
   
   
   <div style="margin-left: 30px"><h3>订单详情：</h3></div>
     <div class="form-group">
			   	<div class="col-sm-2 control-label">订单号:</div>
			   	<div class="col-sm-10">
			   		<span class="form-control" style="border: hidden; box-shadow:none;">{{order.orderNumber}}</span>
			   	</div>			      
			</div>
   
  <div class="form-group">
			   	<div class="col-sm-2 control-label">收货人:</div>
			   	<div class="col-sm-10">
			   		<span class="form-control" style="border: hidden; box-shadow:none;">{{order.orConsignee}}</span>
			   	</div>			      
			</div>
			
			<div class="form-group">
			   	<div class="col-sm-2 control-label">电话:</div>
			   	<div class="col-sm-10">
			       <span class="form-control" style="border: hidden; box-shadow:none;">{{order.orderPhone}}</span>
			    </div>
			</div>
			
			<div class="form-group">
			   	<div class="col-sm-2 control-label">属地:</div>
			   	<div class="col-sm-10">
			       <span class="form-control" style="border: hidden; box-shadow:none;">{{order.address}}</span>
			    </div>
			</div>
			
			
				<div class="form-group">
			   	<div class="col-sm-2 control-label">下单时间:</div>
			   	<div class="col-sm-10">
			       <span class="form-control" style="border: hidden; box-shadow:none;">{{order.orderTime}}</span>
			    </div>
			</div>	
			
			<div class="form-group">
				<div class="col-sm-2 control-label"></div> 
				&nbsp;&nbsp;<input type="button" class="btn btn-warning" @click="reload" value="返回"/>
			</div>
	 </form>
  </div> 
   
   
   
     <div v-show="showListNo1" class="panel panel-default">
 <div style="margin-left: 30px"><h3>历史订单：</h3></div>  
   <table style="margin-left: 70px ">
	<tr>
	<th style="padding-left:25px">订单id</th>
	<th style="padding-left:50px">订单号</th>
	<th style="padding-left:30px">电话</th>
	<th style="padding-left:80px">收货人</th>
	<th style="padding-left:90px">订单状态</th>
	<th style="padding-left:110px">下单时间</th>
	<th style="padding-left:110px">属地</th>
	</tr>

  		 <template v-for="item in orderList"  v-if="orderList !=null" > 
  					<tr>
					<td style="padding-left:30px">{{item.id}}</td> 
					<td style="padding-left:30px">{{item.orderNumber}}</td> 
					<td style="padding-left:30px">{{item.orderPhone}}</td>
					<td style="padding-left:80px">{{item.orConsignee}}</td> 
					<td style="padding-left:90px">{{item.orderState}}</td>
					<td style="padding-left:90px">{{item.orderTime}}</td>
					<td style="padding-left:90px;">{{item.address}}</td>
					 </tr>
					 
		 </template>
 
 </table>
			<div class="form-group">
				<div class="col-sm-2 control-label"></div> 
				&nbsp;&nbsp;<input type="button" class="btn btn-warning" @click="reload" value="返回"/>
			</div>
  </div> 
   
   
  <div v-show="showListNo2" class="panel panel-default">
 	<div style="margin-left: 30px"><h3>商品统计：</h3></div>  
 	<div>
			   <table style="margin-left: 70px ">
				<tr>
				<th style="padding-left:25px">菜品id</th>
				<th style="padding-left:50px">订单总数量</th>
				<th style="padding-left:50px">库存数量</th>
				</tr>
			
			  		 <template v-for="item in adDishesHeeList"  v-if="adDishesHeeList !=null" > 
			  					<tr>
								<td style="padding-left:30px">{{item.advanceDishesId}}</td> 
								<td style="padding-left:80px">{{item.counts}}</td> 
								<td style="padding-left:70px">{{item.counts1}}</td> 
								 </tr>
								 
					 </template>
			 
			 	</table>
			 	</div>
			<div class="form-group" style="margin-left: 30px">
				<div class="col-sm-2 control-label"></div> 
				&nbsp;&nbsp;<input type="button"  class="btn btn-warning" @click="reload" value="返回"/>
			</div>
  </div> 
   
   
   
   
</div> 
<script src="../../js/modules/restaurant/order.js"></script>
</body>
</html>